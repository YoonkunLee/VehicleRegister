@model List<VehicleRegister.ViewModel.CategoryListView>
@{
    ViewData["Title"] = "Index";
}

<h3 class="floatLeft titleMargin">Category List</h3>
<a class="floatRight" href='@Url.Action("CreateCategory", "Category")'>
    <input class="waves-effect waves-light btn-large blue" type="button" value="Create" />
</a>

<table>
    <thead class="boldTitle">
        <tr>
            <td>No.</td>
            <td>Name</td>
            <td>StartRange</td>
            <td>FinishRange</td>
            <td>Category Icon</td>
            <td>Fucntions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IndexNumber</td>
                <td>@item.Name</td>
                <td>@item.StartRange</td>
                <td>@item.FinishRange</td>
                <td><img src="@item.IconPath" /></td>
                <td>
                    @Html.ActionLink("Update", "UpdateCategory", "Category", new { id = item.Id }, new { @class = "waves-effect waves-light btn-small" })
                    @Html.ActionLink("Delete", "DeleteCategory", "Category", new { id = item.Id }, new { @class = "waves-effect waves-light btn-small red" })
                </td>
            </tr>
        }
    </tbody>
</table>

